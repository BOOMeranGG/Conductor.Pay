<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <stroke android:color="@color/colorDarkYellow" android:width="2dp"/>
            <corners android:radius="6dp"/>
            <solid android:color="@color/colorDarkYellow"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <stroke android:color="@color/colorLightYellow" android:width="2dp"/>
            <corners android:radius="6dp"/>
            <solid android:color="@color/colorLightYellow"/>
        </shape>
    </item>

</selector>